{
  "name": "metalsmith",
  "version": "2.3.0",
  "description": "An extremely simple, pluggable static site generator.",
  "license": "MIT",
  "homepage": "https://metalsmith.io",
  "bugs": "https://github.com/metalsmith/metalsmith/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/metalsmith/metalsmith.git"
  },
  "bin": {
    "metalsmith": "bin/metalsmith",
    "_metalsmith": "bin/_metalsmith"
  },
  "scripts": {
    "test": "nyc mocha",
    "pretest-debug": "npm install",
    "test-debug": "mocha debug",
    "precoverage": "npm install",
    "coverage": "nyc report --reporter=text-lcov > ./coverage.info",
    "coveralls": "npm run coverage && cat ./coverage.info | coveralls",
    "lint": "eslint index.js lib/* bin/* test/*.js"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "clone": "^2.1.2",
    "co-fs-extra": "^1.2.1",
    "commander": "^6.2.1",
    "cross-spawn": "^7.0.3",
    "gray-matter": "^4.0.3",
    "is-utf8": "~0.2.0",
    "recursive-readdir": "^2.1.0",
    "rimraf": "^3.0.2",
    "stat-mode": "^1.0.0",
    "thunkify": "^2.1.2",
    "unyield": "0.0.1",
    "ware": "^1.3.0"
  },
  "devDependencies": {
    "@metalsmith/drafts": "^1.1.0",
    "@metalsmith/markdown": "^1.3.0",
    "assert-dir-equal": "^1.1.0",
    "co-mocha": "^1.0.1",
    "coveralls": "^3.1.1",
    "eslint": "^6.8.0",
    "mocha": "^7.2.0",
    "nyc": "^15.1.0",
    "toml": "^3.0.0"
  },
  "engines": {
    "node": ">=8"
  },
  "directories": {
    "lib": "lib/*",
    "test": "test/**"
  },
  "files": [
    "lib/**",
    "snapcraft.yaml"
  ],
  "keywords": [
    "static",
    "file",
    "site",
    "website",
    "blog",
    "generator",
    "markdown",
    "jekyll",
    "wintersmith",
    "blacksmith"
  ],
  "mocha": {
    "timeout": 3000,
    "reporter": "spec",
    "require": "co-mocha",
    "slow": 500
  }
}
